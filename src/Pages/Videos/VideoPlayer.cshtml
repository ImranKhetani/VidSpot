@page
@model MyWebApp.Pages.Videos.VideoPlayerModel
<div class="text-center mt-4">
    <h1 class="display-5">Playing: @Model.VideoName</h1>
</div>
<div class="video text-center">
    <video width="640" controls>
        <source src="/videos/@Model.VideoName" type="video/mp4">
        Your browser does not support the video tag.
    </video>
</div>
<a class="btn btn-secondary btn-lg mt-3" href="/Videos">Back to Video List</a>
